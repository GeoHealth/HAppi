{
  "rules": {
    "no-duplicate-variable": true,
    "no-unused-variable": [
      true
    ],
    "member-ordering": [true, { "order": "fields-first" }],
    "only-arrow-functions": [true, "allow-declarations"],
    "typedef-whitespace":
      [
        true,
        {
          "call-signature": "nospace",
          "index-signature": "nospace",
          "parameter": "nospace",
          "property-declaration": "nospace",
          "variable-declaration": "nospace"
        },
        {
          "call-signature": "onespace",
          "index-signature": "onespace",
          "parameter": "onespace",
          "property-declaration": "onespace",
          "variable-declaration": "onespace"
        }
      ],
    "curly": true,
    "no-invalid-this": false,
    "no-for-in-array": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "triple-equals": [true, "allow-undefined-check", "allow-null-check"],
    "eofline": true,
    "no-trailing-whitespace": true,
    "align": [true, "parameters", "arguments", "statements"],
    "arrow-parens": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "new-parens": true,
    "no-angle-bracket-type-assertion": true,
    "semicolon": [true, "always", "ignore-interfaces", "ignore-bound-class-methods"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-typecast"]
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ]
}
